        "default": "Menu 2"
      },
      {
        "type": "link_list",
        "id": "second_linklist",
        "label": "Second menu"
      },
      {
        "type": "header",
        "content": "Third Menu"
      },
      {
        "type": "checkbox",
        "id": "third_menu_enable",
