{{ 'bundle.header.css' | asset_url | stylesheet_tag }}

<div class="header_container">
    <div class="header_block">
        {% for block in section.blocks %}
            <div class="header_message">
                <span class="">{{ block.settings.heading | escape }}</span>
            </div>
        {% endfor %}
    </div>
</div>
<input type='text' name='header' id='headerid' value="test" action="javascript:headerFunction()" />
{% include 'message' %}

{{ 'bundle.header.js' | asset_url | script_tag }}

{% schema %}
  {
    "name": "Header",
	"max_blocks": 3,
    "settings": [],
	"blocks": [
	  {
		"type": "message",
		"name": "Store message",
		"settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          }
		]
	  }
	]
  }
{% endschema %}